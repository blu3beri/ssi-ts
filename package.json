{
  "name": "didcomm-ts",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": ["packages/*"],
  "scripts": {
    "check-types": "tsc -p ./tsconfig.json --noEmit && tsc -p ./tsconfig.test.json --noEmit",
    "check-format": "yarn prettier --list-different",
    "prettier": "prettier --ignore-path .gitignore '**/*.+(js|json|ts|md|yml|yaml)'",
    "format": "yarn prettier --write",
    "validate": "yarn check-types && yarn check-format",
    "test": "jest",
    "build": "yarn workspaces run build",
    "clean": "rm -rf packages/**/build"
  },
  "devDependencies": {
    "@jest/types": "29.2.1",
    "@types/node": "18.11.9",
    "eslint": "8.25.0",
    "jest": "29.2.2",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  }
}
