{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "types": [],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@didcomm-ts/*": ["./packages/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts",
    "**/__tests__/*.ts",
    "**/build/**",
    "samples"
  ]
}
